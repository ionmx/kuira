<div class="w-screen min-h-full flex">
  <div class="bg-red-400 w-1/3 min-h-full flex pt-48 justify-center">
    <div class="text-center text-white">
      <span class="text-8xl font-extrabold text-shadow">KUIRA</span><br>
      Project Management made easy
    </div>
  </div>
  <div class="w-2/3">
    <div class="w-full text-right p-4">
      Not a member? <%= link_to "Sign up now", new_registration_path(resource_name), class: "text-blue-500 text-right" %><br />
    </div>
    <div class="flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
      <div class="max-w-md w-full space-y-8 p-6">
        <div>
          <h2 class="mt-6 text-2xl font-extrabold">Forgot your password?</h2>
        </div>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
        
          <div class="py-2">
            <%= f.label :email, class: "font-bold" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full" %>
          </div>
        
          <div class="py-2">
            <%= f.submit "Send me reset password instructions",  class: "bg-red-500 text-white p-2 rounded hover:cursor-pointer"  %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

